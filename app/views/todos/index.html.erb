<div class="w-screen flex items-center justify-center z-10">
  <div class="w-full max-w-4xl mx-auto p-6 mt-4" data-testid="todo-container">  
  <!-- Responsive Profile Card -->
  <div class="bg-white rounded-2xl shadow-sm mb-8 max-w-sm md:max-w-4xl mx-auto p-6">
    
    <!-- Profile Content -->
    <div class="text-center md:text-left">
      <div class="md:flex md:items-center md:gap-6">
        
        <!-- Profile Image -->
        <div class="mb-4 md:mb-0 md:flex-shrink-0">
          <%= image_tag "04BD3150-78CA-49CC-99B9-78F9A040BE70_1_105_c.jpeg", 
              class: "w-20 h-20 md:w-24 md:h-24 rounded-full mx-auto md:mx-0 object-cover" %>
        </div>
        
        <!-- Profile Info -->
        <div class="mb-6 md:mb-0 md:flex-grow">
          <h2 class="text-xl md:text-2xl font-bold text-gray-900 mb-3">Note Supachalita</h2>
          
          <!-- Status -->
          <div class="flex items-center justify-center md:justify-start gap-2 mb-2">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span class="text-gray-500 text-sm">Available for work</span>
          </div>
          
          <!-- Job Title -->
          <p class="text-gray-600 text-sm">Product Developer at ODTS</p>
        </div>
        
        <!-- Portfolio Button -->
        <div class="md:flex-shrink-0">
          <%= link_to "My Brag", brags_path, 
              class: "w-full md:w-auto inline-block px-4 py-2 bg-blue-100 text-blue-600 font-medium text-sm border border-3 border-blue-200 rounded-full hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors text-center whitespace-nowrap",
              data: { 
                testid: "brag-button"
              }
              %>
        </div>
        
      </div>
    </div>
  </div>

    <div class="text-center mb-8">    
      <turbo-frame id="new_todo" class="block">
        <div>
          <%= render "form", todo: Todo.new %>
        </div>
      </turbo-frame>
    </div>

    <%= turbo_stream_from "todos" %>
    
    <div class="space-y-2">
      <ul id="todos-list" class="space-y-2" data-testid="todo-list">
        <%= render @todos %>
      </ul>
    </div>

    <turbo-frame id="empty-state">
      <% if @todos.empty? %>
        <div class="text-center py-12" data-testid="empty-state">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No quests yet</h3>
          <p class="text-gray-500">Add your first quest item above to get started!</p>
        </div>
      <% end %>
    </turbo-frame>
  </div>
</div>